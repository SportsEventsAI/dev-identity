{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // to find out edge profile directory, type edge://version/ in the address bar
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "urlFilter": "http://localhost:3000/*",
            "webRoot": "${workspaceFolder}/src",
            "runtimeArgs": ["--auto-open-devtools-for-tabs --do-not-de-elevate"]
        },
        {
            "name": "Run and Connect",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "type": "node",
            "serverReadyAction": {
                "action": "debugWithEdge",
                // ref: https://json-schema.org/understanding-json-schema/reference/regular_expressions
                "pattern": "localhost.+3000",
                "uriFormat": "http://localhost:3000/",
                "killOnServerStop": true,
                "webRoot": "${workspaceFolder}/src"
            }
        }
    ]
}
